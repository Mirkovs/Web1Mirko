---
const {
  href = "#",
  variant = "primary", // primary | secondary | ghost
  size = "md", // md | lg
  target,
  rel,
  ariaLabel,
} = Astro.props;

const styles = {
  base: `
    display:inline-flex; align-items:center; justify-content:center;
    gap:10px; text-decoration:none; font-weight:650;
    border-radius: 14px; border: 1px solid rgba(255,255,255,.12);
    transition: transform .08s ease, background .2s ease, border-color .2s ease;
    outline: none;
  `,
  md: `padding: 10px 14px; font-size: 15px;`,
  lg: `padding: 12px 16px; font-size: 16px; border-radius: 16px;`,
  primary: `
    background: linear-gradient(135deg, var(--brand), var(--brand-2));
    color: #0b1220; border-color: transparent;
  `,
  secondary: `
    background: rgba(255,255,255,.10);
    color: var(--text);
  `,
  ghost: `
    background: transparent;
    color: var(--text);
  `,
};
const style = `${styles.base}${styles[size]}${styles[variant]}`;
---
<a
  href={href}
  target={target}
  rel={rel}
  aria-label={ariaLabel}
  style={style}
  on:focus={() => {}}
>
  <slot />
</a>

<style>
a:active{transform: translateY(1px)}
a:focus-visible{box-shadow: 0 0 0 6px var(--ring)}
</style>
